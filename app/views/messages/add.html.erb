<h1 class="display-4 text-primary">Messages#add</h1>
<p><%= @msg %></p>

<p style="color:red"><%= @f_msg %></p>

<% if @message.errors.any? %>
  <ul>
    <% messages.errors.full_messages.each do |err| %>
      <li><%= err %></li>
    <% end %>
  </ul>
<% end %>

<%# <%= form_for(@message, url: {controller: 'messages', action: 'create' }) do |form| %> %>
<%= form_with(model: @message, url: {controller: 'messages', action: 'create' }) do |form| %>
  <div class="form-group">
    <label for="person_id">投稿者ID</label>
    <%= form.text_field :person_id, class: "form-control" %>
  </div>

  <div class="form-group">
    <label for="title">タイトル</label>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <label for="message">メッセージ</label>
    <%= form.text_area :message, {row: 3, class: "form-control" } %>
  </div>

  <%= form.submit "作成" %>
<% end %>
